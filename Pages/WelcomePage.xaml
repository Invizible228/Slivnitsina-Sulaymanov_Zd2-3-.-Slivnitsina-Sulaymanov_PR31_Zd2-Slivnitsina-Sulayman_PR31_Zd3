<Page x:Class="MaraphonSkills.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaraphonSkills.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">

    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="30"/>
        </Style>
    </Page.Resources>

    <StackPanel>
        <Label FontSize="20" Content="Спасибо за вашу регистрацию в качестве бегуна!" />
        <Label Content="Спасибо за вашу регистрацию в качестве бегуна в Marathon Skills 2016!" />
        <Label Content="С вами свяжутся по поводу оплаты." />
        <Button Content="ok" Width="50" Click="GoBack"/>
    </StackPanel>
</Page>
